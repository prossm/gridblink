{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "gridblink",
  "permissions": {
    "reddit": {
      "asUser": [
        "SUBSCRIBE_TO_SUBREDDIT"
      ]
    }
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "settings": {
    "subreddit": {
      "timezone": {
        "type": "select",
        "label": "Timezone",
        "options": [
          { "label": "US Eastern (New York)", "value": "America/New_York" },
          { "label": "US Central (Chicago)", "value": "America/Chicago" },
          { "label": "US Mountain (Denver)", "value": "America/Denver" },
          { "label": "US Pacific (Los Angeles)", "value": "America/Los_Angeles" },
          { "label": "US Alaska", "value": "America/Anchorage" },
          { "label": "US Hawaii", "value": "Pacific/Honolulu" },
          { "label": "UK (London)", "value": "Europe/London" },
          { "label": "Central Europe (Paris/Berlin)", "value": "Europe/Paris" },
          { "label": "Australia Eastern (Sydney)", "value": "Australia/Sydney" },
          { "label": "Australia Central (Adelaide)", "value": "Australia/Adelaide" },
          { "label": "Australia Western (Perth)", "value": "Australia/Perth" },
          { "label": "Japan (Tokyo)", "value": "Asia/Tokyo" },
          { "label": "India (Kolkata)", "value": "Asia/Kolkata" },
          { "label": "Singapore", "value": "Asia/Singapore" },
          { "label": "UTC", "value": "UTC" }
        ],
        "defaultValue": "America/New_York"
      },
      "dailyResetHour": {
        "type": "select",
        "label": "Daily reset time (leaderboard & musical notes)",
        "options": [
          { "label": "12:00 AM (Midnight)", "value": "0" },
          { "label": "1:00 AM", "value": "1" },
          { "label": "2:00 AM", "value": "2" },
          { "label": "3:00 AM", "value": "3" },
          { "label": "4:00 AM", "value": "4" },
          { "label": "5:00 AM (Default)", "value": "5" },
          { "label": "6:00 AM", "value": "6" },
          { "label": "7:00 AM", "value": "7" },
          { "label": "8:00 AM", "value": "8" },
          { "label": "9:00 AM", "value": "9" },
          { "label": "10:00 AM", "value": "10" },
          { "label": "11:00 AM", "value": "11" },
          { "label": "12:00 PM (Noon)", "value": "12" },
          { "label": "1:00 PM", "value": "13" },
          { "label": "2:00 PM", "value": "14" },
          { "label": "3:00 PM", "value": "15" },
          { "label": "4:00 PM", "value": "16" },
          { "label": "5:00 PM", "value": "17" },
          { "label": "6:00 PM", "value": "18" },
          { "label": "7:00 PM", "value": "19" },
          { "label": "8:00 PM", "value": "20" },
          { "label": "9:00 PM", "value": "21" },
          { "label": "10:00 PM", "value": "22" },
          { "label": "11:00 PM", "value": "23" }
        ],
        "defaultValue": "5"
      },
      "enableAutoPosting": {
        "type": "boolean",
        "label": "Automatically create daily game posts",
        "defaultValue": true
      },
      "autoPostHour": {
        "type": "select",
        "label": "Automatic post time (same timezone as above)",
        "options": [
          { "label": "12:00 AM (Midnight)", "value": "0" },
          { "label": "1:00 AM", "value": "1" },
          { "label": "2:00 AM", "value": "2" },
          { "label": "3:00 AM", "value": "3" },
          { "label": "4:00 AM", "value": "4" },
          { "label": "5:00 AM (Default - Same as reset)", "value": "5" },
          { "label": "6:00 AM", "value": "6" },
          { "label": "7:00 AM", "value": "7" },
          { "label": "8:00 AM", "value": "8" },
          { "label": "9:00 AM", "value": "9" },
          { "label": "10:00 AM", "value": "10" },
          { "label": "11:00 AM", "value": "11" },
          { "label": "12:00 PM (Noon)", "value": "12" },
          { "label": "1:00 PM", "value": "13" },
          { "label": "2:00 PM", "value": "14" },
          { "label": "3:00 PM", "value": "15" },
          { "label": "4:00 PM", "value": "16" },
          { "label": "5:00 PM", "value": "17" },
          { "label": "6:00 PM", "value": "18" },
          { "label": "7:00 PM", "value": "19" },
          { "label": "8:00 PM", "value": "20" },
          { "label": "9:00 PM", "value": "21" },
          { "label": "10:00 PM", "value": "22" },
          { "label": "11:00 PM", "value": "23" }
        ],
        "defaultValue": "5"
      }
    }
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "gridblink",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-post-creation": {
        "endpoint": "/internal/scheduler/daily-post",
        "cron": "0 * * * *"
      }
    }
  },
  "dev": {
    "subreddit": "gridblink"
  }
}